{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "mr-creams-backend",
  "version": "1.0.0",
  "description": "Backend API for MR.CREAMS - Modern Relationship Conflict Resolution & Emotion Analysis Management System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "migrate": "node scripts/runMigrations.js",
    "migrate:dev": "NODE_ENV=development node scripts/runMigrations.js",
    "migrate:prod": "NODE_ENV=production node scripts/runMigrations.js",
    "migrate:data": "node scripts/migrateSqliteToPostgres.js",
    "setup:db": "npm run migrate && npm run migrate:data",
    "seed:demo": "node scripts/seedCredentials.js"
  },
  "dependencies": {
    "@casl/ability": "^6.7.5",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.3.0",
    "firebase-admin": "^12.0.0",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.12",
    "pg": "^8.11.3",
    "prom-client": "^15.1.3",
    "sqlite3": "^5.1.7",
    "stripe": "^14.0.0",
    "uuid": "^9.0.1",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "express",
    "api",
    "postgres",
    "relationship",
    "emotion",
    "analysis",
    "healing",
    "mr-creams"
  ],
  "author": "MR.CREAMS Team",
  "license": "MIT"
}
