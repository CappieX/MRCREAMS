# MR.CREAMS Environment Configuration

# Database Configuration
DB_USER=postgres
DB_HOST=localhost
DB_NAME=mr_creams_db
DB_PASSWORD=Admin@123
DB_PORT=5432

# Server Configuration
PORT=6000
NODE_ENV=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (for notifications and verification)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@mrcreams.com

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn
ANALYTICS_ID=your-analytics-id

# Firebase Configuration for Push Notifications
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase Private Key Here\n-----END PRIVATE KEY-----\n"

# Google Calendar Integration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Microsoft Outlook Integration
OUTLOOK_CLIENT_ID=your-outlook-client-id
OUTLOOK_CLIENT_SECRET=your-outlook-client-secret
OUTLOOK_REDIRECT_URI=http://localhost:3000/auth/outlook/callback

# Microsoft Graph API
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Stripe Payment Integration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Zoom Video Conferencing
ZOOM_CLIENT_ID=your-zoom-client-id
ZOOM_CLIENT_SECRET=your-zoom-client-secret
ZOOM_REDIRECT_URI=http://localhost:3000/auth/zoom/callback

# HIPAA Compliance Configuration
PHI_SALT=your-secure-random-salt-for-phi-hashing
ENCRYPTION_KEY=your-master-encryption-key-for-phi-data
AUDIT_LOG_RETENTION_DAYS=2555
DATA_RETENTION_ENABLED=true
HIPAA_COMPLIANCE_MODE=true

# GDPR Compliance Configuration
GDPR_COMPLIANCE_MODE=true
CONSENT_MANAGEMENT_ENABLED=true
DATA_EXPORT_ENABLED=true
DATA_DELETION_ENABLED=true
PRIVACY_BY_DESIGN=true
DATA_MINIMIZATION=true

# Security Hardening Configuration
SECURITY_HARDENING_ENABLED=true
RATE_LIMITING_ENABLED=true
INPUT_VALIDATION_ENABLED=true
SECURITY_HEADERS_ENABLED=true
IP_WHITELIST_ENABLED=false
IP_BLACKLIST_ENABLED=true
SECURITY_MONITORING_ENABLED=true
SECURITY_ALERTS_ENABLED=true
MAX_REQUEST_SIZE=1048576
MAX_REQUESTS_PER_MINUTE=100
MAX_REQUESTS_PER_HOUR=1000
SECURITY_EVENT_RETENTION_DAYS=90
ALLOWED_ORIGINS=http://localhost:3000,https://mrcreams.com
