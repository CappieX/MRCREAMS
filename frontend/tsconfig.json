{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowJs": false,
    "baseUrl": "src",
    "paths": {}
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "src/**/*.js", "src/**/*.jsx"]
}
